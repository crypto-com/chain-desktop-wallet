{
  "name": "chain-desktop-wallet",
  "version": "0.0.11",
  "description": "Crypto.com Chain Desktop Wallet App",
  "repository": "github:crypto-com/chain-desktop-wallet",
  "author": "Crypto.com <chain@crypto.com>",
  "license": "Apache-2.0",
  "homepage": ".",
  "main": "build/electron/main.js",
  "private": true,
  "dependencies": {
    "@ant-design/icons": "^4.3.0",
    "@cosmjs/stargate": "^0.24.0-alpha.10",
    "@crypto-com/chain-jslib": "^0.0.4",
    "@types/crypto-js": "^4.0.1",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/node": "^14.14.10",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.6",
    "antd": "^4.9.1",
    "axios": "^0.21.1",
    "bfj": "^7.0.2",
    "camelcase": "^6.1.0",
    "crypto-js": "^4.0.0",
    "electron-devtools-installer": "^3.1.1",
    "electron-is-dev": "^1.2.0",
    "electron-reload": "^1.5.0",
    "less-vars-to-js": "^1.3.0",
    "nedb-promises": "^4.1.0",
    "qrcode.react": "^1.0.0",
    "react": "^17.0.1",
    "react-copy-to-clipboard": "^5.0.2",
    "react-dom": "^17.0.1",
    "react-refresh": "^0.8.3",
    "react-router-dom": "^5.2.0",
    "react-script": "^2.0.5",
    "react-sticky-mouse-tooltip": "^0.0.1",
    "recoil": "^0.1.2",
    "scrypt-js": "^3.0.1",
    "ts-pnp": "1.2.0",
    "typescript": "4.0.5",
    "url-loader": "4.1.1",
    "zxcvbn": "^4.4.2"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --watchAll=false",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
    "electron:windev": "concurrently \"SET BROWSER=none && yarn start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
    "electron:pre-build": "yarn build && tsc -p electron",
    "electron:build": "rm -rf build && rm -rf dist  && yarn build && tsc -p electron && electron-builder --publish=never",
    "lint-staged": "lint-staged",
    "lint:js": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src",
    "prettier": "prettier --write '/src/**/*.{js,jsx,tsx,ts,less,md,json}'"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write"
    ],
    "src/**/*.less": [
      "stylelint --fix less",
      "stylelint --fix --syntax less",
      "stylelint --syntax less"
    ],
    "src/**/*.{js,jsx,ts,tsx}": "yarn lint:js"
  },
  "build": {
    "productName": "Crypto.com Chain Desktop Wallet (Beta)",
    "appId": "chain.crypto.com.chain-desktop-wallet",
    "files": [
      "build/**/*"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.finance",
      "darkModeSupport": true
    },
    "linux": {
      "category": "Utility"
    },
    "dmg": {
      "icon": false
    },
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@babel/plugin-syntax-jsx": "^7.12.1",
    "@pmmmwh/react-refresh-webpack-plugin": "0.4.2",
    "@svgr/webpack": "5.4.0",
    "@types/chai": "^4.2.14",
    "@types/jest": "^26.0.16",
    "@types/mocha": "^8.0.4",
    "@types/qrcode.react": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "@umijs/fabric": "^2.3.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.0",
    "babel-loader": "8.1.0",
    "babel-plugin-named-asset-import": "^0.3.7",
    "babel-preset-react-app": "^10.0.0",
    "case-sensitive-paths-webpack-plugin": "2.3.0",
    "chai": "4.2.0",
    "concurrently": "^5.3.0",
    "css-loader": "4.3.0",
    "dotenv": "8.2.0",
    "dotenv-expand": "5.1.0",
    "electron": "^11.0.3",
    "electron-builder": "^22.9.1",
    "eslint": "^7.10.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.9.2",
    "eslint-plugin-unicorn": "^23.0.0",
    "eslint-webpack-plugin": "^2.1.0",
    "file-loader": "6.1.1",
    "fs-extra": "^9.0.1",
    "html-webpack-plugin": "4.5.0",
    "husky": "^4.3.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.6.0",
    "jest-circus": "^26.6.3",
    "jest-resolve": "26.6.0",
    "jest-watch-typeahead": "0.6.1",
    "less": "^3.12.2",
    "less-loader": "^7.1.0",
    "lint-staged": "^10.4.0",
    "mini-css-extract-plugin": "0.11.3",
    "mocha": "8.1.3",
    "optimize-css-assets-webpack-plugin": "5.0.4",
    "pnp-webpack-plugin": "1.6.4",
    "postcss-flexbugs-fixes": "4.2.1",
    "postcss-loader": "3.0.0",
    "postcss-normalize": "8.0.1",
    "postcss-preset-env": "6.7.0",
    "postcss-safe-parser": "5.0.2",
    "prettier": "^1.19.1",
    "prompts": "2.4.0",
    "react-app-polyfill": "^2.0.0",
    "react-dev-utils": "^11.0.1",
    "resolve": "1.18.1",
    "resolve-url-loader": "^3.1.2",
    "sass-loader": "8.0.2",
    "semver": "7.3.2",
    "style-loader": "1.3.0",
    "stylelint": "^13.7.2",
    "terser-webpack-plugin": "4.2.3",
    "wait-on": "^5.2.0",
    "webpack": "4.44.2",
    "webpack-dev-server": "3.11.0",
    "webpack-manifest-plugin": "2.2.0",
    "workbox-webpack-plugin": "5.1.4"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "setupFilesAfterEnv": [],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jsdom",
    "testRunner": "<rootDir>/node_modules/jest-circus/runner.js",
    "transform": {
      "^.+\\.(js|jsx|mjs|cjs|ts|tsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|cjs|ts|tsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|cjs|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "modulePaths": [],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "resetMocks": true
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  }
}

{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ES2020.Promise"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "../build",
    "rootDir": "../",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "esModuleInterop": true ,
    "typeRoots": ["node_modules/@types"],
    // "types":["long"],
    "experimentalDecorators": true  
  }
}
